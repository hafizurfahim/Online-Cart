
@{
    ViewData["Title"] = "Add new Role";
}
<br />

<h2 class="text-info">Add New Product</h2>
<form asp-action="Create" method="post" id="Role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3 style="color : red"> @ViewBag.message</h3>
        <br />

        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input id="name" name="name" value="@ViewBag.name" class="form-control" />
            </div>

        </div>



        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>




@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $("#Role-form").validate({
                rules: {
                   name: {
                        required: true,

                    }

                   
                },

                messages: {
                    name: "Enter your Email !!!"
                    

                }



            });
        });

    </script>


}


